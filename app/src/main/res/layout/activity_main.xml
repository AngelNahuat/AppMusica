<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:backgroundTint="#EDE9D0">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="INICIO"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/gradientecv"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="9dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="50dp"
                    android:rotation="8"
                    android:rotationX="25"
                    android:src="@drawable/vinilpiso6"></ImageView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_gravity="bottom|right"
                    android:rotationX="60"
                    android:src="@drawable/vinilpiso"></ImageView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="-10dp"
                    android:rotationX="45"
                    android:src="@drawable/vinilpiso2"></ImageView>


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="130dp"
                    android:layout_marginBottom="30dp"
                    android:rotationX="25"
                    android:rotationY="-8"
                    android:src="@drawable/vinilpiso5"></ImageView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="100dp"
                    android:rotation="-13"
                    android:rotationX="25"
                    android:src="@drawable/vinilpiso3"></ImageView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="150dp"
                    android:rotation="8"
                    android:rotationX="42"
                    android:src="@drawable/vinilpiso4"></ImageView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
android:layout_marginEnd="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|right"

                    android:src="@drawable/lp">


                </ImageView>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="240dp"
            android:backgroundTint="#EDE9D0">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="Artistas"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:text="Ver todos"
                android:textColor="#393939"
                android:textSize="18dp"></TextView>

            <ListView

                android:id="@+id/List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="30dp"

                android:divider="#EDE9D0"
                android:dividerHeight="15.0sp"


                >


            </ListView>


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>